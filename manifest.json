{
  "name": "Weather extension",
  "version": "0.3",
  "manifest_version": 2,
  "description": "Check your location weather condition with a single click",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "128": "weather.png"
  },
  "browser_action": {
    "default_title": "Check your location weather condition with a single click",
    "default_popup": "popup.html",
    "default_icon": "weather.png"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "geolocation",
    "alarms",
    "storage"
  ],
  "web_accessible_resources": [
    "*.ttf"
  ]
}