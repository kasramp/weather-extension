{
  "name": "weather-extension",
  "description": "Check your location weather condition with a single click",
  "version": null,
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "weather-extension",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "geolocation",
    "alarms",
    "storage"
  ],
  "web_accessible_resources": [
    "*.ttf"
  ]
}
